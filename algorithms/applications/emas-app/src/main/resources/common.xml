<?xml version="1.0" encoding="UTF-8" ?>
<configuration xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xmlns="http://age.iisg.agh.edu.pl/schema/age"
               xsi:schemaLocation="http://age.iisg.agh.edu.pl/schema/age http://age.iisg.agh.edu.pl/schema/age/age.xsd">
    <block name="workplaceManagerComponents">
        <component name="defaultAgentAddressSupplier" class="org.hage.address.agent.DefaultAgentAddressSupplier"/>
        <component name="comparator" class="org.hage.action.ordering.DefaultActionComparator" isSingleton="false"/>
    </block>

    <block name="workplaceComponents">
        <component name="aggregateActionService" class="org.hage.agent.AggregateActionService" isSingleton="false"/>
        <component name="aggregateQueryService" class="org.hage.agent.AggregateQueryService" isSingleton="false"/>
        <component name="aggregateMessagingService" class="org.hage.agent.AggregateMessagingService"
                   isSingleton="false"/>
    </block>

    <block name="stopCondition">
        <component name="stopCondition" class="org.hage.workplace.FixedStepCountStopCondition">
            <constructor-arg type="Long" value="1000"/>
        </component>
    </block>
    <block name="propertygatherer"/>
    <block name="persistence"/>

    <block name="workplaces"/>

</configuration>
