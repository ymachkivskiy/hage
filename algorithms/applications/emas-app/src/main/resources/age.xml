<?xml version="1.0" encoding="UTF-8" ?>
<configuration xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://age.iisg.agh.edu.pl/schema/age"
               xsi:schemaLocation="http://age.iisg.agh.edu.pl/schema/age http://age.iisg.agh.edu.pl/schema/age/age.xsd">

    <include file="classpath:common.xml">
        <block name="workplaces">
            <component name="workplace" class="org.hage.platform.component.workplace.SimpleWorkplace" isSingleton="false">
                <property name="agent">
                    <agent name="action" class="org.hage.platform.component.agent.SimpleAggregate">
                        <component class="org.hage.platform.util.communication.address.agent.DefaultAgentAddressSupplier">
                            <constructor-arg name="nameTemplate" value="workplace"/>
                        </component>

                        <component name="aggregateActionService"
                                   class="org.hage.platform.component.agent.ActionDrivenAggregateActionService" isSingleton="false"/>

                        <agent name="island" class="org.hage.emas.agent.DefaultIslandAgent">
                            <component class="org.hage.platform.util.communication.address.agent.DefaultAgentAddressSupplier">
                                <constructor-arg name="nameTemplate" value="island*"/>
                            </component>

                            <agent name="agent" class="org.hage.emas.agent.DefaultIndividualAgent">
                                <component class="org.hage.platform.util.communication.address.agent.DefaultAgentAddressSupplier">
                                    <constructor-arg name="nameTemplate" value="individual*"/>
                                </component>
                                <strategy name="actionPreparator"
                                          class="org.hage.emas.action.individual.ActionPreparer">
                                    <list isSingleton="true">
                                        <strategy class="org.hage.emas.action.individual.EncounterActionContext"/>
                                        <strategy class="org.hage.emas.action.individual.MigrationActionContext"/>
                                        <strategy class="org.hage.emas.action.individual.DeathActionContext"/>
                                    </list>
                                </strategy>
                            </agent>

                            <strategy name="encounterAction" class="org.hage.emas.action.individual.EncounterAction">
                                <strategy name="reproductionPredicate"
                                          class="org.hage.emas.predicate.HighEnergyPredicate">
                                    <property name="threshold" type="Double" value="90"/>
                                </strategy>
                                <strategy name="sexualReproductionStrategy"
                                          class="org.hage.emas.reproduction.DefaultSexualReproduction"/>
                                <strategy name="asexualReproductionStrategy"
                                          class="org.hage.emas.reproduction.DefaultAsexualReproduction"/>
                                <strategy name="battleStrategy"
                                          class="org.hage.emas.battle.DeterministicFitnessBattle"/>
                                <strategy name="battleEnergyTransfer"
                                          class="org.hage.emas.energy.ConstantEnergyTransfer">
                                    <property name="transferredEnergy" type="Double" value="20.0"/>
                                </strategy>
                            </strategy>
                            <strategy name="migrationAction" class="org.hage.emas.action.individual.MigrationAction">
                                <strategy name="migrationPredicate" class="org.hage.emas.predicate.RandomPredicate">
                                    <property name="probability" type="Double" value="${individual.chanceToMigrate}"/>
                                </strategy>
                                <strategy name="migrationStrategy"
                                          class="org.hage.emas.migration.RandomDestinationMigration"/>
                            </strategy>
                            <strategy name="deathAction" class="org.hage.emas.action.individual.DeathAction">
                                <strategy name="deathPredicate" class="org.hage.emas.predicate.LowEnergyPredicate">
                                    <property name="threshold" type="Double" value="0"/>
                                </strategy>
                            </strategy>

                            <property name="agents">
                                <list>
                                    <multiple count="${islands.size}">
                                        <reference target="agent"/>
                                    </multiple>
                                </list>
                            </property>

                            <!-- IslandAgents strategies -->
                            <strategy name="actionPreparator" class="org.hage.emas.action.island.ActionPreparer">
                                <strategy name="initializationActionCtx"
                                          class="org.hage.emas.action.island.InitializationActionContext"/>
                                <list isSingleton="true">
                                    <strategy class="org.hage.emas.util.SkippingActionContext"/>
                                    <strategy class="org.hage.emas.action.island.StatisticsUpdateActionContext"/>
                                </list>
                            </strategy>
                        </agent>

                        <property name="agents">
                            <list>
                                <multiple count="${islands.number}">
                                    <reference target="island"/>
                                </multiple>
                            </list>
                        </property>

                        <strategy name="initializationAction" class="org.hage.emas.action.island.InitializationAction">
                            <property name="initialEnergy" type="Double" value="100"/>
                        </strategy>
                        <strategy name="skippingAction" class="org.hage.emas.util.SkippingAction"/>
                        <strategy name="statisticsUpdateAction"
                                  class="org.hage.emas.action.island.StatisticsUpdateAction">
                            <property name="resolution" type="Integer" value="100"/>
                        </strategy>
                    </agent>
                </property>
            </component>
        </block>
        <block name="workplaceComponents" override="false">
            <!-- Global Strategies -->
            <strategy name="rand" class="org.hage.random.SimpleGenerator">
                <constructor-arg type="Long" value="1234567890"/>
            </strategy>

            <strategy name="solutionEvaluator" class="org.hage.evaluation.realvalued.RastriginEvaluator"/>
            <strategy name="problem" class="org.hage.problem.realvalued.RastriginProblem">
                <constructor-arg type="Integer" value="${problem.size}"/>
            </strategy>

            <strategy name="solutionFactory" class="org.hage.solution.realvalued.RealValuedSolutionFactory"/>

            <strategy name="recombinationStrategy"
                      class="org.hage.variation.recombination.realvalued.OnePointRecombination"/>
            <strategy name="mutationStategy" class="org.hage.variation.mutation.realvalued.NormalMicroMacroMutate">
                <property name="chanceToMutate" type="Double" value="${feature.chanceToMutate}"/>
                <property name="mutationRange" type="Double" value="${feature.mutationRange}"/>
            </strategy>
        </block>
    </include>
</configuration>
