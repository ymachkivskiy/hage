<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="hage.platform.di.container" class="org.jage.platform.component.pico.PicoComponentInstanceProviderFactory" factory-method="createInstanceProvider"/>

    <bean id="hage.platform.communication" class="org.jage.communication.DefaultCommunicationManager"/>

    <bean id="hage.platform.bus" class="org.jage.bus.EventBus">
        <constructor-arg value="mainBus"/>
    </bean>

    <bean id="hage.platform.component.core" class="org.jage.workplace.manager.DefaultWorkplaceManager" parent="hage.component.stateful.base"/>

    <bean id="hage.platform.lifecycle.exitHook" class="org.jage.lifecycle.AutoExitHook"/>

    <bean id="hage.platform.lifecycle" class="org.jage.lifecycle.DefaultLifecycleManager"/>

    <bean id="hage.platform.configuration.loader" class="org.jage.platform.config.xml.XmlConfigurationLoader"/>

    <bean id="hage.platform.addressSupplier.agent" class="org.jage.address.agent.DefaultAgentAddressSupplier"/>

    <bean id="hage.platform.stopCondition" class="org.jage.workplace.FixedStepCountStopCondition" parent="hage.component.stateful.base"/>

    <bean id="hage.platform.actionComparator" class="org.jage.action.ordering.DefaultActionComparator" scope="prototype"/>

    <alias name="hage.platform.communication" alias="hage.platform.addressSupplier.node"/>


    <bean class="org.jage.platform.containermerge.ContainerComponentShare" init-method="shareComponents">
        <property name="componentsForSharing">
            <list>
                <ref bean="hage.platform.addressSupplier.node"/>
                <ref bean="hage.platform.addressSupplier.agent"/>
            </list>
        </property>
    </bean>

</beans>