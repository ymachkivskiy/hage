<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="hage.service.commandLine.arguments" class="org.jage.platform.cli.CommandLineArgumentsService"/>

    <bean id="hage.service.configuration" class="org.jage.configuration.service.ConfigurationService"
          parent="hage.component.stateful.base"/>

    <bean id="hage.service.configurationLoader" class="org.jage.configuration.service.ConfigurationLoaderService"
          parent="hage.component.stateful.base"/>

    <bean id="hage.service.configuration.communication.remote"
          class="org.jage.configuration.communication.ConfigurationServiceRemoteChanel"
          parent="hage.component.stateful.base"/>

</beans>