<?xml version="1.0"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>org.hage.student.examples</groupId>
        <artifactId>examples</artifactId>
        <version>0.2.0-SNAPSHOT</version>
    </parent>

    <artifactId>applications</artifactId>

    <name>HAgE::Examples::Applications</name>
    <description>Configuration files for sample applications</description>

    <dependencies>

        <!-- AgE Modules -->
        <dependency>
            <groupId>org.hage</groupId>
            <artifactId>cli-bootstrapper</artifactId>
            <version>${project.version}</version>
        </dependency>

        <dependency>
            <groupId>org.hage.platform.component</groupId>
            <artifactId>config-core</artifactId>
            <version>${project.version}</version>
        </dependency>

        <!-- Solution Module -->
        <dependency>
            <groupId>org.hage.student.examples</groupId>
            <artifactId>solutions</artifactId>
            <version>${project.version}</version>
        </dependency>

        <!-- logging -->
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-log4j12</artifactId>
        </dependency>
    </dependencies>

    <profiles>
        <profile>
            <id>prop-comp</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>exec-maven-plugin</artifactId>

                        <configuration>
                            <mainClass>org.hage.cli.CliNodeBootstrapper</mainClass>
                            <arguments>
                                <argument>-Dage.computation.conf=classpath:examples/hage/distr_conf.xml</argument>
                            </arguments>
                        </configuration>

                        <executions>
                            <execution>
                                <phase>install</phase>
                                <goals>
                                    <goal>java</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>

        <profile>
            <id>slave</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>exec-maven-plugin</artifactId>

                        <configuration>
                            <mainClass>org.hage.cli.CliNodeBootstrapper</mainClass>
                        </configuration>

                        <executions>
                            <execution>
                                <phase>install</phase>
                                <goals>
                                    <goal>java</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>

</project>
