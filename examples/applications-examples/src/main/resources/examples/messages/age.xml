<?xml version="1.0" encoding="UTF-8" ?>
<configuration xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://age.iisg.agh.edu.pl/schema/age"
               xsi:schemaLocation="http://age.iisg.agh.edu.pl/schema/age http://age.iisg.agh.edu.pl/schema/age/age.xsd">

    <include file="classpath:examples/common.xml">
        <block name="workplaces">
            <component name="workplace" class="org.hage.platform.component.workplace.SimpleWorkplace" isSingleton="false">
                <property name="agent">
                    <agent name="xfiles" class="org.hage.platform.component.agent.SimpleAggregate">
                        <component class="org.hage.platform.util.communication.address.agent.DefaultAgentAddressSupplier">
                            <constructor-arg name="nameTemplate" value="TheXFiles"/>
                        </component>

                        <property name="agents">
                            <list>
                                <agent name="scully" class="org.hage.examples.messages.MessagesSimpleAgent">
                                    <component class="org.hage.platform.util.communication.address.agent.DefaultAgentAddressSupplier">
                                        <constructor-arg name="nameTemplate" value="Scully"/>
                                    </component>
                                    <property name="messageToSend" value="The Truth is Out There"/>
                                    <property name="receiver" value="Mulder"/>
                                </agent>
                                <agent name="mulder" class="org.hage.examples.messages.MessagesSimpleAgent">
                                    <component class="org.hage.platform.util.communication.address.agent.DefaultAgentAddressSupplier">
                                        <constructor-arg name="nameTemplate" value="Mulder"/>
                                    </component>
                                    <property name="messageToSend" value="I want to believe"/>
                                    <property name="receiver" value="Scully"/>
                                </agent>
                            </list>
                        </property>
                    </agent>
                </property>
            </component>
        </block>
    </include>
</configuration>
