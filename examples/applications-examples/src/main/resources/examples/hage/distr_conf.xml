<?xml version="1.0" encoding="UTF-8" ?>
<configuration xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xmlns="http://age.iisg.agh.edu.pl/schema/age"
               xsi:schemaLocation="http://age.iisg.agh.edu.pl/schema/age http://age.iisg.agh.edu.pl/schema/age/age.xsd">


    <component name="globalFooComponent" class="org.hage.examples.hage.distrconf.SomeFooComponent" isSingleton="true">
        <constructor-arg value="GLOBAL"/>
    </component>

    <include file="classpath:examples/common.xml">
        <block name="workplaces">
            <component name="lightWorkplace" class="org.hage.platform.component.execution.workplace.SimpleWorkplace" isSingleton="false">
                <property name="agent">
                    <agent class="org.hage.platform.component.execution.agent.SimpleAggregate">
                        <component class="org.hage.platform.communication.address.agent.DefaultAgentAddressSupplier">
                            <constructor-arg name="nameTemplate" value="Light Workplace"/>
                        </component>
                        <property name="agents">
                            <list>
                                <agent class="org.hage.examples.hage.distrconf.LightAgent">
                                    <component class="org.hage.examples.hage.distrconf.SomeFooComponent" isSingleton="true">
                                        <constructor-arg value="SPECIAL LILIAN"/>
                                    </component>
                                    <component class="org.hage.platform.communication.address.agent.DefaultAgentAddressSupplier">
                                        <constructor-arg name="nameTemplate" value="Lilian"/>
                                    </component>
                                </agent>

                                <agent class="org.hage.examples.hage.distrconf.LightAgent">
                                    <component class="org.hage.platform.communication.address.agent.DefaultAgentAddressSupplier">
                                        <constructor-arg name="nameTemplate" value="Alice"/>
                                    </component>
                                </agent>

                            </list>
                        </property>
                    </agent>
                </property>
            </component>
        </block>
    </include>
</configuration>
