<?xml version="1.0" encoding="UTF-8" ?>
<configuration xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://age.iisg.agh.edu.pl/schema/age"
               xsi:schemaLocation="http://age.iisg.agh.edu.pl/schema/age http://age.iisg.agh.edu.pl/schema/age/age.xsd">

    <component name="stopCondition" class="org.hage.workplace.FixedStepCountStopCondition" isSingleton="true">
        <constructor-arg type="Long" value="20"/>
    </component>

    <component name="defaultAgentAddressSupplier" class="org.hage.address.agent.DefaultAgentAddressSupplier"/>
    <component name="comparator" class="org.hage.action.ordering.DefaultActionComparator" isSingleton="false"/>

    <component name="aggregateActionService" class="org.hage.agent.AggregateActionService" isSingleton="false"/>
    <component name="aggregateQueryService" class="org.hage.agent.AggregateQueryService" isSingleton="false"/>
    <component name="aggregateMessagingService" class="org.hage.agent.AggregateMessagingService" isSingleton="false"/>

    <agent name="workplace1" class="org.hage.workplace.SimpleWorkplace">
        <property name="agent" ref="scully"/>

        <agent name="scully" class="org.hage.examples.messages.MessagesSimpleAgent">
            <component class="org.hage.address.agent.DefaultAgentAddressSupplier">
                <constructor-arg name="nameTemplate" value="Scully"/>
            </component>
            <property name="message" value="The Truth is Out There"/>
            <property name="receiver" value="Mulder"/>
        </agent>
    </agent>

    <agent name="workplace2" class="org.hage.workplace.SimpleWorkplace">
        <property name="agent" ref="mulder"/>

        <agent name="mulder" class="org.hage.examples.messages.MessagesSimpleAgent">
            <component class="org.hage.address.agent.DefaultAgentAddressSupplier">
                <constructor-arg name="nameTemplate" value="Mulder"/>
            </component>
            <property name="message" value="I want to believe"/>
            <property name="receiver" value="Scully"/>
        </agent>
    </agent>

</configuration>
