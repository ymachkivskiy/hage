<?xml version="1.0" encoding="UTF-8" ?>
<configuration xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://age.iisg.agh.edu.pl/schema/age"
               xsi:schemaLocation="http://age.iisg.agh.edu.pl/schema/age http://age.iisg.agh.edu.pl/schema/age/age.xsd">

    <component name="stopCondition" class="org.hage.platform.component.execution.workplace.FixedStepCountStopCondition" isSingleton="true">
        <constructor-arg type="Long" value="20"/>
    </component>

    <component name="defaultAgentAddressSupplier" class="org.hage.platform.communication.address.agent.DefaultAgentAddressSupplier"/>
    <component name="comparator" class="org.hage.platform.component.execution.action.ordering.DefaultActionComparator" isSingleton="false"/>

    <agent name="workplace" class="org.hage.platform.component.execution.workplace.SimpleWorkplace">
        <property name="agent" ref="aggregate"/>
        <agent name="aggregate" class="org.hage.platform.component.execution.agent.SimpleAggregate">
            <property name="agents">
                <list name="agents">
                    <agent name="scully" class="org.hage.examples.helloworld.HelloWorldSimpleAgent">
                        <component class="org.hage.platform.communication.address.agent.DefaultAgentAddressSupplier">
                            <constructor-arg name="nameTemplate" value="Scully"/>
                        </component>
                    </agent>
                    <agent name="mulder" class="org.hage.examples.helloworld.HelloWorldSimpleAgent">
                        <component class="org.hage.platform.communication.address.agent.DefaultAgentAddressSupplier">
                            <constructor-arg name="nameTemplate" value="Mulder"/>
                        </component>
                    </agent>
                </list>
            </property>
        </agent>
    </agent>

    <component name="aggregateActionService" class="org.hage.platform.component.execution.agent.AggregateActionService" isSingleton="false"/>
    <component name="aggregateQueryService" class="org.hage.platform.component.execution.agent.AggregateQueryService" isSingleton="false"/>
    <component name="aggregateMessagingService" class="org.hage.platform.component.execution.agent.AggregateMessagingService" isSingleton="false"/>

</configuration>
