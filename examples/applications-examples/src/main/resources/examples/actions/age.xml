<?xml version="1.0" encoding="UTF-8" ?>
<configuration xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xmlns="http://age.iisg.agh.edu.pl/schema/age"
               xsi:schemaLocation="http://age.iisg.agh.edu.pl/schema/age http://age.iisg.agh.edu.pl/schema/age/age.xsd">

    <include file="classpath:examples/common.xml">
        <block name="workplaces">
            <component name="workplace" class="org.hage.platform.component.workplace.SimpleWorkplace" isSingleton="false">
                <property name="agent">
                    <agent name="action" class="org.hage.platform.component.agent.SimpleAggregate">
                        <property name="agents">
                            <list>
                                <agent name="firstAgent" class="org.hage.examples.actions.ActionSimpleAgent"/>
                                <agent name="secondAgent" class="org.hage.examples.actions.ActionSimpleAgent"/>
                            </list>
                        </property>
                        <strategy name="sampleAction" class="org.hage.examples.actions.SampleActionStrategy"/>
                    </agent>
                </property>
            </component>
        </block>
    </include>
</configuration>
