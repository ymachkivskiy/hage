<?xml version="1.0" encoding="UTF-8" ?>
<configuration xmlns="http://age.iisg.agh.edu.pl/schema/age"
               xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xsi:schemaLocation="http://age.iisg.agh.edu.pl/schema/age http://age.iisg.agh.edu.pl/schema/age/age.xsd">

	<include file="classpath:examples/common.xml">
		<block name="workplaces">
			<component name="workplace" class="org.jage.workplace.SimpleWorkplace" isSingleton="false">
				<property name="agent">
					<agent name="action" class="org.jage.agent.SimpleAggregate">
						<property name="agents">
							<list>
								<agent name="firstAgent" class="org.jage.examples.actions.ActionSimpleAgent"/>
								<agent name="secondAgent" class="org.jage.examples.actions.ActionSimpleAgent"/>
							</list>
						</property>
						<strategy name="sampleAction" class="org.jage.examples.actions.SampleActionStrategy"/>
					</agent>
				</property>
			</component>
		</block>
	</include>
</configuration>
