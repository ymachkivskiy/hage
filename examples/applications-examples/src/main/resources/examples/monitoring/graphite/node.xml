<?xml version="1.0" encoding="UTF-8" ?>
<configuration xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xmlns="http://age.iisg.agh.edu.pl/schema/age"
               xsi:schemaLocation="http://age.iisg.agh.edu.pl/schema/age http://age.iisg.agh.edu.pl/schema/age/age.xsd">

    <component class="org.hage.communication.HazelcastCommunicationManager"/>
    <component class="org.hage.configuration.service.ConfigurationStorageService"/>
    <component class="org.hage.configuration.service.ConfigurationLoaderService"/>
    <component class="org.hage.bus.EventBus">
        <constructor-arg name="name" type="String" value="mainBus"/>
    </component>

    <component name="workplaceManager" class="org.hage.platform.component.workplace.manager.DefaultWorkplaceManager"/>

    <block name="monitoring">
        <component class="org.hage.monitoring.gatherer.DefaultComputationInstanceProvider"/>

        <component name="handler1" class="org.hage.monitoring.handler.HandlerFactoryProvider">
            <constructor-arg name="name" value="first.alienAbductions"/>
            <constructor-arg name="observableProviders" ref="observableProviders"/>
            <constructor-arg name="observers" ref="selectFirstList"/>
            <constructor-arg name="clazz" value="org.hage.monitoring.handler.BasicHandlerFactory"/>
            <constructor-arg name="method" value="create"/>
        </component>

        <component name="handler1" class="org.hage.monitoring.handler.HandlerFactoryProvider">
            <constructor-arg name="name" value="second.alienAbductions"/>
            <constructor-arg name="observableProviders" ref="observableProviders"/>
            <constructor-arg name="observers" ref="selectSecondList"/>
            <constructor-arg name="clazz" value="org.hage.monitoring.handler.BasicHandlerFactory"/>
            <constructor-arg name="method" value="create"/>
        </component>

        <!-- Supplier -->
        <component name="query" class="org.hage.monitoring.supplier.AgentQuerySupplier">
            <constructor-arg>
                <component class="org.hage.examples.monitoring.ExampleQuery"/>
            </constructor-arg>
        </component>

        <!-- Observables -->
        <list name="observableProviders">
            <component name="queryProvider" class="org.hage.monitoring.observable.ObservableProvider">
                <constructor-arg name="supplier" ref="stringQuery"/>
                <constructor-arg name="rate" value="500" type="Long"/>
            </component>
        </list>

        <!--  BOOM -->
        <!-- Consumers -->
        <component name="selectFirst" class="org.hage.examples.monitoring.SelectNthElement">
            <constructor-arg name="target" ref="graphiteConsumer"/>
            <constructor-arg name="index" value="1" type="Integer"/>
        </component>
        <component name="selectSecond" class="org.hage.examples.monitoring.SelectNthElement">
            <constructor-arg name="target" ref="graphiteConsumer"/>
            <constructor-arg name="index" value="1" type="Integer"/>
        </component>
        <component name="graphiteConsumer" class="org.hage.monitoring.graphite.GraphiteConsumer"></component>
    </block>

</configuration>