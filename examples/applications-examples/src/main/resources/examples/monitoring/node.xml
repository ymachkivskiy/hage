<?xml version="1.0" encoding="UTF-8" ?>
<configuration xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xmlns="http://age.iisg.agh.edu.pl/schema/age"
               xsi:schemaLocation="http://age.iisg.agh.edu.pl/schema/age http://age.iisg.agh.edu.pl/schema/age/age.xsd">

    <component class="org.hage.communication.HazelcastCommunicationManager"/>
    <component class="org.hage.configuration.service.ConfigurationStorageService"/>
    <component class="org.hage.configuration.service.ConfigurationLoaderService"/>
    <component class="org.hage.bus.EventBus">
        <constructor-arg name="name" type="String" value="mainBus"/>
    </component>

    <component name="workplaceManager" class="org.hage.workplace.manager.DefaultWorkplaceManager"/>
    <component class="org.hage.lifecycle.AutoExitHook"/>

    <block name="monitoring">
        <component class="org.hage.monitoring.Monitoring">
            <component class="org.hage.monitoring.config.DefaultComputationInstanceProvider"/>
            <component class="org.hage.monitoring.config.ExecutorProvider"/>
            <component class="org.hage.monitoring.config.ExecutorShutdownCaller"/>
            <component class="org.hage.monitoring.config.RxComputationSchedulerProvider"/>

            <component name="stringQuery" class="org.hage.monitoring.supplier.AgentStringQuerySupplier">
                <constructor-arg name="query" value="/TheXFiles/Scully@alienAbductions"/>
            </component>

            <component name="random" class="org.hage.monitoring.supplier.RandomSupplier"/>

            <component name="randomProvider" class="org.hage.monitoring.observable.ObservableProvider">
                <constructor-arg name="supplier" ref="random"/>
                <constructor-arg name="rate" value="1000" type="Long"/>
            </component>

            <component name="queryProvider" class="org.hage.monitoring.observable.ObservableProvider">
                <constructor-arg name="supplier" ref="stringQuery"/>
                <constructor-arg name="rate" value="1000" type="Long"/>
            </component>

            <list name="observers">
                <component name="logging" class="org.hage.monitoring.observer.LoggingObserver"/>
            </list>
            <constructor-arg>
                <component class="org.hage.monitoring.config.XmlConfig">
                    <constructor-arg>
                        <list>
                            <component name="handler1" class="org.hage.monitoring.handler.HandlerFactoryProvider">
                                <constructor-arg name="name" value="handler1"/>
                                <constructor-arg name="observableProviders">
                                    <list name="observableProviders">
                                        <reference target="queryProvider"/>
                                        <reference target="randomProvider"/>
                                    </list>
                                </constructor-arg>
                                <constructor-arg name="observers" ref="observers"/>
                                <constructor-arg name="clazz" value="org.hage.monitoring.handler.AvgHandlerFactory"/>
                                <constructor-arg name="method" value="create"/>
                            </component>

                            <component name="handler2" class="org.hage.monitoring.handler.HandlerFactoryProvider">
                                <constructor-arg name="name" value="handler2"/>
                                <constructor-arg name="observableProviders">
                                    <list>
                                        <reference target="queryProvider"/>
                                    </list>
                                </constructor-arg>
                                <constructor-arg name="observers" ref="observers"/>
                                <constructor-arg name="clazz" value="org.hage.monitoring.handler.BasicHandlerFactory"/>
                                <constructor-arg name="method" value="create"/>
                            </component>
                        </list>
                    </constructor-arg>
                </component>
            </constructor-arg>

            <constructor-arg>
                <component class="org.hage.monitoring.config.TypeSafeConfig">
                    <constructor-arg value="examples/monitoring/monitoring"/>
                </component>
            </constructor-arg>
        </component>
    </block>
</configuration>