<?xml version="1.0" encoding="UTF-8" ?>
<configuration xmlns="http://age.iisg.agh.edu.pl/schema/age" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xsi:schemaLocation="http://age.iisg.agh.edu.pl/schema/age http://age.iisg.agh.edu.pl/schema/age/age.xsd">

	<include file="classpath:examples/common.xml">
		<block name="workplaces">
			<component name="workplace" class="org.jage.workplace.SimpleWorkplace" isSingleton="false">
				<property name="agent">
					<agent name="action" class="org.jage.agent.SimpleAggregate">
						<property name="agents">
							<list>
								<agent name="scully" class="org.jage.examples.configuration.ArrayAgent">
									<array name="object-example"
									       value-type="org.jage.examples.configuration.ExampleClass">
										<component name="example-1" class="org.jage.examples.configuration.ExampleClass"
										           isSingleton="false">
											<constructor-arg value="First object"/>
										</component>
										<component name="example-2" class="org.jage.examples.configuration.ExampleClass"
										           isSingleton="false">
											<constructor-arg value="Second object"/>
										</component>
										<component name="example-3" class="org.jage.examples.configuration.ExampleClass"
										           isSingleton="false">
											<constructor-arg value="Third object"/>
										</component>
									</array>

									<array name="long-example" value-type="Long">
										<value type="Long">2</value>
										<value type="Long">4</value>
										<value type="Long">8</value>
									</array>
								</agent>
							</list>
						</property>
					</agent>
				</property>
			</component>
		</block>

		<block name="stopCondition">
			<component name="stopCondition" class="org.jage.workplace.FixedStepCountStopCondition">
				<constructor-arg type="Long" value="1"/>
			</component>
		</block>
	</include>
</configuration>
