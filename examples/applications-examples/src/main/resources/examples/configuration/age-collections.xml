<?xml version="1.0" encoding="UTF-8" ?>
<configuration xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xmlns="http://age.iisg.agh.edu.pl/schema/age"
               xsi:schemaLocation="http://age.iisg.agh.edu.pl/schema/age http://age.iisg.agh.edu.pl/schema/age/age.xsd">

    <include file="classpath:examples/common.xml">
        <block name="workplaces">
            <component name="workplace" class="org.hage.platform.component.workplace.SimpleWorkplace" isSingleton="false">
                <property name="agent">
                    <agent name="action" class="org.hage.platform.component.agent.SimpleAggregate">
                        <property name="agents">
                            <list>
                                <agent name="list" class="org.hage.examples.configuration.ListAgent">
                                    <list name="object-example">
                                        <component class="org.hage.examples.configuration.ExampleClass"
                                                   isSingleton="false">
                                            <constructor-arg value="First object"/>
                                        </component>

                                        <component class="org.hage.examples.configuration.ExampleClass"
                                                   isSingleton="false">
                                            <constructor-arg value="Second object"/>
                                        </component>

                                        <component class="org.hage.examples.configuration.ExampleClass"
                                                   isSingleton="false">
                                            <constructor-arg value="Third object"/>
                                        </component>
                                    </list>
                                </agent>

                                <agent name="map" class="org.hage.examples.configuration.MapAgent">
                                    <map name="object-example">
                                        <entry key="example-1">
                                            <component class="org.hage.examples.configuration.ExampleClass"
                                                       isSingleton="false">
                                                <constructor-arg value="First object"/>
                                            </component>
                                        </entry>
                                        <entry key="example-2">
                                            <component class="org.hage.examples.configuration.ExampleClass"
                                                       isSingleton="false">
                                                <constructor-arg value="Second object"/>
                                            </component>
                                        </entry>
                                        <entry key="example-3">
                                            <component class="org.hage.examples.configuration.ExampleClass"
                                                       isSingleton="false">
                                                <constructor-arg value="Third object"/>
                                            </component>
                                        </entry>
                                    </map>
                                </agent>
                            </list>
                        </property>
                    </agent>
                </property>
            </component>
        </block>

        <block name="stopCondition">
            <component name="stopCondition" class="org.hage.platform.component.workplace.FixedStepCountStopCondition">
                <constructor-arg type="Long" value="1"/>
            </component>
        </block>
    </include>
</configuration>
