<?xml version="1.0" encoding="UTF-8" ?>
<configuration xmlns="http://age.iisg.agh.edu.pl/schema/age"
               xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xsi:schemaLocation="http://age.iisg.agh.edu.pl/schema/age http://age.iisg.agh.edu.pl/schema/age/age.xsd">

	<include file="classpath:examples/common.xml">
		<block name="workplaces">
			<component name="workplace" class="org.jage.workplace.SimpleWorkplace" isSingleton="false">
				<property name="agent">
					<agent name="action" class="org.jage.agent.SimpleAggregate">
						<property name="agents">
							<list>
								<agent name="list" class="org.jage.examples.configuration.ListAgent">
									<list name="object-example">
										<component class="org.jage.examples.configuration.ExampleClass"
										           isSingleton="false">
											<constructor-arg value="First object"/>
										</component>

										<component class="org.jage.examples.configuration.ExampleClass"
										           isSingleton="false">
											<constructor-arg value="Second object"/>
										</component>

										<component class="org.jage.examples.configuration.ExampleClass"
										           isSingleton="false">
											<constructor-arg value="Third object"/>
										</component>
									</list>
								</agent>

								<agent name="map" class="org.jage.examples.configuration.MapAgent">
									<map name="object-example">
										<entry key="example-1">
											<component class="org.jage.examples.configuration.ExampleClass"
											           isSingleton="false">
												<constructor-arg value="First object"/>
											</component>
										</entry>
										<entry key="example-2">
											<component class="org.jage.examples.configuration.ExampleClass"
											           isSingleton="false">
												<constructor-arg value="Second object"/>
											</component>
										</entry>
										<entry key="example-3">
											<component class="org.jage.examples.configuration.ExampleClass"
											           isSingleton="false">
												<constructor-arg value="Third object"/>
											</component>
										</entry>
									</map>
								</agent>
							</list>
						</property>
					</agent>
				</property>
			</component>
		</block>

		<block name="stopCondition">
			<component name="stopCondition" class="org.jage.workplace.FixedStepCountStopCondition">
				<constructor-arg type="Long" value="1"/>
			</component>
		</block>
	</include>
</configuration>
