<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="hage.service.commandLine.arguments" class="org.jage.cli.CommandLineArgumentsService"/>

    <bean id="hage.service.configuration"
          class="org.jage.configuration.service.ConfigurationStorageService"
          parent="hage.component.stateful.base"/>

    <bean id="hage.service.configurationLoader"
          class="org.jage.configuration.service.ConfigurationLoaderService"
          parent="hage.component.stateful.base"/>

    <bean id="hage.service.configurationSplitter"
          class="org.jage.configuration.service.ConfigurationSplitService"
          parent="hage.component.stateful.base"/>

    <bean id="hage.service.configurationSplitter.ConfSplitterWorker"
            class="org.jage.configuration.split.SimplePerformanceBasedConfigurationSplitAllocator"/>

    <bean id="hage.service.performance.NodePerformanceManager" class="org.jage.performance.node.CombinedNodePerformanceManager">
        <property name="measurers">
            <list>
                <ref bean="hage.service.performance.CPUMeasurer"/>
                <ref bean="hage.service.performance.MemoryMeasurer"/>
                <ref bean="hage.service.performance.DiskMeasurer"/>
            </list>
        </property>
    </bean>

    <bean id="hage.service.performance.normalizer.scaled"
          class="org.jage.performance.node.normalize.scaled.ScaledNormalizerProvider"/>

    <bean id="hage.service.performance.CPUMeasurer" class="org.jage.performance.node.measure.impl.CpuPerformanceMeasurer"/>

    <bean id="hage.service.performance.MemoryMeasurer" class="org.jage.performance.node.measure.impl.MemoryPerformanceMeasurer"/>

    <bean id="hage.service.performance.DiskMeasurer" class="org.jage.performance.node.measure.impl.DiskPerformanceMeasurer"/>

    <bean id="hage.service.performance.ClusterPerformanceManager" class="org.jage.performance.cluster.CombinedClusterPerformanceManager"/>

</beans>