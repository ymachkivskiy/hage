<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean class="org.springframework.beans.factory.annotation.AutowiredAnnotationBeanPostProcessor"/>

    <import resource="classpath*:org/hage/**/module-spring-conf.xml"/>

    <bean id="hage.component.stateful.base" abstract="true" init-method="init" destroy-method="finish"/>

    <import resource="classpath:spring/platform.xml"/>
    <import resource="classpath:spring/services.xml"/>
    <import resource="classpath:spring/communication.xml"/>


</beans>